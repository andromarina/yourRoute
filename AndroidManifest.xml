<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andromarina"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="17"/>


    <application
            android:name=".yourRoute.YourRouteApp"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/MyTheme">
        <activity
                android:name=".yourRoute.MainActivity"
                android:label="@string/app_name"
                android:launchMode="singleTop"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>

        </activity>
        <activity
                android:name=".yourRoute.RouteDetailsActivity"
                android:screenOrientation="portrait"
                android:parentActivityName=".yourRoute.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".yourRoute.MainActivity"/>
        </activity>
        <activity
                android:name=".yourRoute.SearchResultsActivity"
                android:screenOrientation="portrait"
                android:parentActivityName=".yourRoute.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".yourRoute.MainActivity"/>
        </activity>
    </application>

</manifest>