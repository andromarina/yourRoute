<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="top">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_marginBottom="5dp"
            android:id="@+id/main_street_search_layout">

        <AutoCompleteTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/street_search"
                android:completionThreshold="1"
                android:singleLine="true"
                android:shadowColor="@color/filters_panel_background"
                android:hint="@string/street_name_hint"
                android:background="@drawable/street_search"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:dropDownVerticalOffset="10dp" android:paddingRight="47dp" android:layout_margin="5dp"
                android:maxLength="50"/>
        <LinearLayout
                android:layout_width="47dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_margin="5dp">

            <ImageButton
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:id="@+id/clear_button"
                    android:background="@drawable/button_clear"
                    android:layout_marginRight="10dip"
                    android:visibility="invisible">
            </ImageButton>

        </LinearLayout>
    </RelativeLayout>
    <view android:layout_width="match_parent"
          android:layout_height="50dp"
          class="com.yourRoute.controls.CustomSearchField"
          android:id="@+id/view"
          hint="TESTY"/>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="50dp" android:layout_marginBottom="5dp"
                    android:id="@+id/optional_street_search_layout">
        <AutoCompleteTextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                              android:id="@+id/optional_street_search" android:completionThreshold="1"
                              android:singleLine="true"
                              android:shadowColor="@color/filters_panel_background"
                              android:hint="@string/second_street_name_hint"
                              android:background="@drawable/street_search"
                              android:paddingLeft="5dp" android:inputType="text" android:dropDownVerticalOffset="10dp"
                              android:paddingRight="47dp" android:layout_margin="5dp" android:maxLength="50"/>
        <LinearLayout android:layout_width="47dip" android:layout_height="fill_parent"
                      android:layout_alignParentRight="true" android:gravity="right|center_vertical"
                      android:layout_margin="5dp">
            <ImageButton android:layout_height="30dip" android:layout_width="30dip"
                         android:id="@+id/clear_button_second"
                         android:background="@drawable/button_clear" android:layout_marginRight="10dip"
                         android:visibility="invisible"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>