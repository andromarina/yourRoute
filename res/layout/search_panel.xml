<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="150dp"
              android:gravity="top">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

        <AutoCompleteTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/street_search"
                android:completionThreshold="1"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:shadowColor="@color/filters_panel_background"
                android:hint="@string/street_name_hint"
                android:background="@drawable/street_search"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:dropDownVerticalOffset="10dp" android:paddingRight="47dp" android:layout_margin="5dp"/>
        <LinearLayout
                android:layout_width="47dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_margin="5dp">

            <ImageButton
                    android:layout_height="20dip"
                    android:layout_width="20dip"
                    android:id="@+id/clear_button"
                    android:background="@drawable/button_clear"
                    android:layout_marginRight="10dip"
                    android:visibility="invisible">
            </ImageButton>

        </LinearLayout>
    </RelativeLayout>

    <SlidingDrawer
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:content="@+id/content"
            android:handle="@+id/handle"
            android:id="@+id/slidingDrawer"
            android:rotation="180"
            android:animateOnClick="true">
        <ImageButton
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand"
                android:background="@android:color/transparent"
                android:rotation="180"
                android:clickable="true"
                android:minHeight="25dp"
                android:minWidth="25dp"/>
        <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/street_search_optional"
                    android:hint="@string/second_street_name_hint"
                    android:rotation="180"
                    android:singleLine="true" android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </SlidingDrawer>

</LinearLayout>