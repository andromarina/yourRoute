<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_search_results"
            android:id="@+id/no_search_results" android:layout_gravity="center" android:textColor="@android:color/black"
            android:gravity="center" android:layout_centerInParent="true" android:visibility="gone"
            android:textSize="@dimen/font_size"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_results" android:drawSelectorOnTop="false" android:clickable="true"
            android:longClickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true" android:listSelector="@drawable/list_selector"/>
</RelativeLayout>